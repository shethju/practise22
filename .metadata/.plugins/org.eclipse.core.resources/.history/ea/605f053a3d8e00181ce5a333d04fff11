	}
	public static int islandPerimeter(int[][] grid) {
        int perimeter = 0;
        int row = grid.length;
        int column = grid[0].length;
        for (int i=0; i < row; i++) {
        		for (int j=0; j < column; j++) {
        			if (grid[i][j] == 1) {
        				
        			}
        		}
        }
    }
	
	public static int findAdjacent(int[][] grid, int row, int column, int gridRows, int gridColumns) {
		int numAdjacent = 0;
		if (column-1 >= 0 && grid[row][column-1] == 1) numAdjacent++;
		if (column+1 <= && grid[row][column-1] == 1) numAdjacent++;
		return numAdjacent;
	}


}
